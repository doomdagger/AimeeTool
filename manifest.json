{
    "name": "AimeeTool",
    "description": "A Tool Made For My Beloved",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "cookies",
        "webRequest",
        "webRequestBlocking",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "file:///G:/MyWorkThings/AimeeTest/*",
                "http://erp.ilovelook.cn/*",
                "https://erp.ilovelook.cn/*"
            ],
            "js": ["/vendor/alertify.min.js", "/vendor/zepto.min.js", "assistant.js"],
            "css": ["/vendor/css/alertify.min.css", "/vendor/css/semantic.min.css"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    }
}